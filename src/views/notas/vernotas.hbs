<div class="row">
    {{#each notas}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
               
               <h4 class="card-title d-flex justify-content-between align-items-center">
                   {{comentario}} <a href="/notas/editar/{{id}}"><i class="fas fa-edit"></i></a>
               </h4>
               <form action="/notas/eliminar/{{_id}}?_method=DELETE" method="POST">
               <input type="hidden" name="_method" value="DELETE">
               <button class="btn btn-primary btn-block btn-sm" type="submit"> 
                    Eliminar
                   </button>
               </form>  
                   
               </h4> 
            </div>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
             
            <p class="lead">No se han creado comentarios a√∫n</p>
            <a href="/notas/agrenota" class="btn btn-success btn-block">Crear comentario</a>
        </div>

    </div>
    {{/each}}
</div>